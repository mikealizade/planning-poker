generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sessions {
  id           String   @id
  session_name String
  created_at   DateTime @default(now())
  status       String
  voting_type    String?
  is_votes_visible Boolean
}

model Participants {
  id               String   @id
  session_id       String
  is_host           Boolean
  participant_name String
  vote             String
  has_voted        Boolean
  is_active        Boolean
  role             String
  joined_at        DateTime @default(now())
  avatar          String
}
