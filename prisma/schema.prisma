generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sessions {
  id           String   @id @default(uuid())
  host_id      String
  session_name String
  created_at   DateTime @default(now())
  status       String
}

// session_id (auto-generated UUID)
// host_id (if authenticated)
// created_at timestamp
// status (e.g., 'active', 'completed')
// session_settings (optional: voting method, timer settings, etc.)
